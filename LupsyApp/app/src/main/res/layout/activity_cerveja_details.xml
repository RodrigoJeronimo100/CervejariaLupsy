<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fundo_amarelo_seco"
    android:orientation="vertical"
    tools:context=".CervejaDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/tv_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/nome"
                android:inputType="text"
                android:minHeight="28dp"
                android:textAlignment="center"
                android:textSize="25dp"
                tools:ignore="VisualLintTextFieldSize" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@drawable/ic_sepline" />

            <ImageView
                android:id="@+id/imgCapa"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/beer" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@drawable/ic_sepline" />

            <TextView
                android:id="@+id/tv_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:gravity="center"
                android:hint="@string/descricao"
                android:inputType="text"
                android:minHeight="48dp"
                android:singleLine="true"
                android:textSize="20sp"
                tools:ignore="VisualLintTextFieldSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Container for Teor Alcool -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/teor_alcool"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/grey"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_teor_alcool"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/teor_alcool"
                            android:textColor="@color/preto_fosco"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="5dp" />

                        <TextView
                            android:id="@+id/tvTeorAlcool"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:autofillHints=""
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:gravity="center"
                            android:minHeight="48dp"
                            android:padding="0dp"
                            android:text="@string/teor_alcoolico"
                            android:textSize="12sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Container for Preco -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/preco"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/grey"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_preco"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/preco"
                            android:textColor="@color/preto_fosco"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="5dp" />

                        <TextView
                            android:id="@+id/tvOutro"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:autofillHints=""
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="@string/precos"
                            android:textSize="12sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_tchim_tchim"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1.15"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    app:cardBackgroundColor="@color/grey"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">


                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="@string/tchim_tchim_icon"
                            android:src="@drawable/tchim_tchim" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tchim_tchim"
                            android:textColor="@color/preto_fosco"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_favoritos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.8"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="heartContainer"
                    app:cardBackgroundColor="@color/grey"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">


                        <ImageView
                            android:id="@+id/heartImageView"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="@string/favoritos_icon"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:src="@drawable/heart_blank" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/favoritar"
                            android:textColor="@color/preto_fosco"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_carrinho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/number_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >

                        <Button
                            android:id="@+id/btn_minus"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:backgroundTint="@color/transparente"
                            android:outlineProvider="none"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_quantity"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="8dp"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="18sp"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/btn_plus"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:outlineProvider="none"
                            android:text="+"
                            android:textSize="20sp"
                            android:backgroundTint="@color/transparente"
                            android:textColor="@color/black" />
                    </LinearLayout>


                    <ImageView
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="40dp"
                        android:onClick="carrinhoClicado"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        android:contentDescription="@string/carrinho_icon"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:src="@drawable/ic_cart1"
                        app:tint="@color/preto_fosco" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/nota_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">


                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progressTint="#FFC107"
                    android:scaleX="0.8"
                    android:onClick="classificarCev"
                    android:scaleY="0.8" />

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:gravity="bottom|center_horizontal"
                    android:text="Avaliação" />

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7" />

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
