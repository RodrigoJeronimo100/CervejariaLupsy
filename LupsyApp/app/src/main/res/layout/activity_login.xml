<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#D36B3E21"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <View
        android:id="@+id/vSpacing"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/logotipo" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvUsername"
        android:textColor="@color/preto_fosco"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/editborder"
        android:ems="10"
        android:hint="@string/EtHUsername"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingStart="10dp" />

    <View
        android:id="@+id/vSpacing2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvPassword"
        android:textColor="@color/preto_fosco"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/editborder"
        android:ems="10"
        android:hint="@string/etPalavra_passe"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingStart="10dp" />

    <Button
        android:id="@+id/btnCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:backgroundTint="#1B1B1B"
        android:insetTop="10dp"
        android:insetRight="15dp"
        android:onClick="onClickLogin"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:paddingRight="30dp"
        android:paddingBottom="20dp"
        android:textColor="@color/branco_sujo"
        android:text="@string/BtnEntrar"
        android:textSize="20sp"
        app:cornerRadius="10dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNConta"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:text="@string/NConta" />

        <TextView
            android:id="@+id/tvConta"
            android:onClick="onClickCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:clickable="true"
            android:gravity="left"
            android:linksClickable="true"
            android:text="@string/Conta"
            android:textColor="@color/cadastro"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/vSpacing3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

</LinearLayout>